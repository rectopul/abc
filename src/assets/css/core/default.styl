.depoimentos
    margin-top 50px

    .wrapper
        border 4px solid #badab5
        padding 40px 15px


    .slick-track
        .slick-slide
            &:nth-child(2n + 0)
                .depoimentos__list-text
                    background #badab5
                    border: 4px solid #badab5
                    position: relative

                    &:after , &:before
