.side-menu-wrapper > ul {
    padding:0;
    margin:0;
    overflow-y: auto;
    width:500px; }

.side-menu-wrapper > ul > li > a {
    display: block;
    padding: 6px 4px 6px 4px;
    color: #ffffff;
    -webkit-transition: 0.3s;
    transition: 0.3s;
    text-decoration: none;
    width: 45%;
    text-transform: uppercase; }

.side-menu-wrapper > ul > li > a:hover {
    color : rgba(208,187,0,0.63); }

