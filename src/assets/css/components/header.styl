.side-menu-wrapper 
    overflow: hidden
    background: #fff
    padding: 15px 0
    position: fixed
    top: 0
    left: -300px
    height: 100%
    z-index: 2
    transition: 0.5s
    width: 300px
    font: 20px
    z-index: 999999999999

    .menu__topo
