.product_variations_nav
    .elementor-column-wrap
        display none
    .variationsNavigation
        display flex
        flex-wrap wrap
        position relative
        margin 0 auto
        flex 0 0 80%
        padding 0 20px
        box-sizing border-box
        justify-content center
        @media (min-width: 1024px)
            margin 0 -20px
            height 95px
            padding 0
            flex 1
            justify-content flex-start

        > span
            flex 0 0 52px
            height 52px
            margin 0 5px
            background-color transparent
            border-radius 50%
            overflow hidden
            padding 2px
            border 1px solid transparent
            outline 0
            display flex
            justify-content center
            align-items center
            @media (min-width: 1024px)
                flex 0 0 95px
                height 95px
            &, > *
                box-sizing border-box
            &.swiper-pagination-bullet-active
                border-color #222

            figure
                margin 0 auto
                border-radius 50%
                display flex
                height 100%
                width 100%
                justify-content center
                position relative
                overflow hidden
                &:before
                    content ''
                    position absolute
                    width 100%
                    height 100%
                    border-radius 50%
                    top 0
                    left 0
                    background-color rgba(0.0.0.0.3)
                img
                    width 100%
                    height auto