body
    .search
        
        &__container
            width 100%
            max-width 1200px
            margin 50px auto
            

            header
                display flex
                padding-bottom 25px
                border-bottom 1px solid #ccc
                margin-bottom 50px

                select 
                    border-radius 0

        &__inputs
            width 100%
            max-width 250px
            margin 0 15px

    .local-list
        ul
            list-style none
            display flex
            margin 0 -15px
            min-width 1px
            padding 0 15px

            @media screen and (max-width 567px)
                flex-wrap wrap
                margin 0
                

            li
                flex 0 0 50%
                margin 0 15px

                @media screen and (max-width 567px)
                    flex 0 0 100%
                    margin 15px 0

            .shop__container
                display flex

                @media screen and (max-width 567px)
                    flex-wrap wrap

                figure
                    flex 0 0 50%
                    display flex
                    margin 0
                    margin-right 15px
                    padding 5px
                    border 1px solid #c2c2c2

                    @media screen and (max-width 567px)
                        flex 0 0 100%

                    img
                        width 100%
                        max-width 100%

                article 
                    flex 1

                    h3
                        font-weight bold
